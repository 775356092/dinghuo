/**index.wxss**/
@import "../../css/icon.wxss";
.title {
  font-family: Arial;
  font-size: 30px;
  color: black;
}

.forms{
  overflow: hidden;
  font-family: Arial;
  margin-top: 40px;
  border-bottom: 1px solid #dbdbdb;
  border-top:0px;
  border-left:0px;
  border-right:0px;
}

.submit_button{
  margin-top: 50px;
}

.form_input{
  margin-left: 80px;
  font-family: Arial;
  border-bottom: 0px;
  border-top:0px;
  border-left:0px;
  border-right:0px;
}

.button{
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 3px 100px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
  cursor: pointer;
}

.button:active{
  position:relative;
  top:1px;
}

page{
  background-color: floralwhite;
}